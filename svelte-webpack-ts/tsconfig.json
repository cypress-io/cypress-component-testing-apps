{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "types": ["cypress"] 
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "cypress.d.ts", "**/*.cy.ts"],
}